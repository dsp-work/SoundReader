<Fluent:RibbonWindow x:Class="SoundReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundReader"
        xmlns:Fluent="urn:fluent-ribbon" 
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e"/>
        <Color x:Key="light_green">#ccff66</Color>
        <Color x:Key="scarlet">#d3381c</Color>
        <Color x:Key="wisteria">#a15dc4</Color>
        <Color x:Key="lilac">#7058a3</Color>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Fluent:Ribbon Grid.Row="0">
            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:Backstage>
                </Fluent:Backstage>
            </Fluent:Ribbon.Menu>

            <!--Tabs-->
            <Fluent:RibbonTabItem Header="HOME" KeyTip="T1">
                <Fluent:RibbonGroupBox
                   Header="ボタン"
                   KeyTip="B">
                    <!-- この中にコントロールを配置する -->
                    <Fluent:Button Header="保存先"
                   KeyTip="BI"
                   Click="Button_Click_Saveto"
                   LargeIcon="./image/icon_113430_256.png"/>

                    <Fluent:Button Header="中ボタン"
                   KeyTip="MI"
                   Size="Middle"
                   Icon="./image/icon_113430_256.png"/>

                    <Fluent:Button Header="小ボタン"
                   KeyTip="SM"
                   Size="Small"
                   Icon="./image/icon_113430_256.png"/>

                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>

            <Fluent:RibbonTabItem Header="タブ2" KeyTip="T2">
            </Fluent:RibbonTabItem>

            <Fluent:RibbonTabItem Header="タブ3" KeyTip="T3">
            </Fluent:RibbonTabItem>

        </Fluent:Ribbon>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <Canvas Width="1" Height="0.8">
                <Image Width="0.74" Height="0.185" x:Name="waveDisplay" VerticalAlignment="Top" HorizontalAlignment="Left">
                    <Image.RenderTransform>
                        <TranslateTransform X="0.13" Y="0.0353"/>
                    </Image.RenderTransform>
                </Image>
            </Canvas>
        </Viewbox>
        <Grid Grid.Row="2">
            <TextBlock Text="My first window containing a Ribbon and something els"/>
            <ListBox>
                <ComboBox x:Name="audio_device_list"
                          Width="483"
                          SelectionChanged="audio_device_list_SelectionChanged"
                          DropDownOpened="audio_device_list_DropDownOpened"
                          IsReadOnly="True"/>
            </ListBox>

            <Label Content="Base file name" Height="30" Margin="503,44,199.6,126"/>
            <Label Content="numbering" Height="30" Margin="651,44,65.6,126"/>
            <Label Content="_" Height="30" Margin="628,75,147.6,95"/>
            <TextBox x:Name="Rec_numbering_filename" Height="23" TextWrapping="Wrap" Text="1" Width="120" Margin="651,79,22.6,98" />
            <TextBox x:Name="Rec_base_filename" Height="23" TextWrapping="Wrap" Text="Sound" Width="120" Margin="503,79,170.6,98"/>
            <Button x:Name="Rec_num_prev" Content="prev." Margin="652,102,89.6,77" Click="Rec_num_prev_Click" />
            <Button x:Name="Rec_num_next" Content="next" Width="51" Margin="720,102,22.6,77" Click="Rec_num_next_Click"/>

            <Button x:Name="Rec_start" Content="Start" Width="75" Margin="571,147,147.6,32" Click="Rec_start_Click"/>
            <Button x:Name="Rec_stop" Content="Stop" Width="75" Margin="675,147,43.6,32" Click="Rec_stop_Click" IsEnabled="False"/>

            <Slider x:Name="Input_volume" Margin="23,96,581.6,275" ValueChanged="Slider_ValueChanged" Maximum="1" SmallChange="0.01"/>
            <ProgressBar x:Name="Rec_Level_Meter" Height="105" Width="26" Margin="61,192,713,116" Orientation="Vertical" SmallChange="0.01" Foreground="#FFCCFF66"/>
            <TextBlock x:Name="Rec_Level_Meter_Value" Height="48" TextWrapping="Wrap" Text="0" Width="42" Margin="100,228,658,137" FontSize="18"/>



            <Fluent:StatusBar Margin="0,379,-0.4,-2" Background="#FFBFE3FF" Height="20">
                <Fluent:StatusBarItem Title="Left placed item"
                          Value="150"
                          HorizontalAlignment="Left">
                    <TextBlock Text="  device status :" />
                </Fluent:StatusBarItem>

                <Separator HorizontalAlignment="Left" />

                <Fluent:StatusBarItem Title="First Left placed item"
                          Value="150"
                          HorizontalAlignment="Left">
                    <TextBlock x:Name="Rec_status" Text="" />
                </Fluent:StatusBarItem>

                <Separator HorizontalAlignment="Left" />

                <Fluent:StatusBarItem Title="Second left placed item"
                          Value="Value shown in ContextMenu"
                          HorizontalAlignment="Left">
                    <TextBlock x:Name="Rec_ch" Text="" />
                </Fluent:StatusBarItem>

                <Separator HorizontalAlignment="Left" />

                <Fluent:StatusBarItem Title="Third left placed item"
                          Value="Value shown in ContextMenu"
                          HorizontalAlignment="Left">
                    <TextBlock x:Name="Rec_bit" Text="" />
                </Fluent:StatusBarItem>
                
                <Separator HorizontalAlignment="Left" />

                <Fluent:StatusBarItem Title="Forth left placed item"
                          Value="Value shown in ContextMenu"
                          HorizontalAlignment="Left">
                    <TextBlock x:Name="Rec_sample" Text="" />
                </Fluent:StatusBarItem>

                <Separator HorizontalAlignment="Left" />

                <Fluent:StatusBarItem Title="Item placed on the right side"
                          HorizontalAlignment="Right"
                          Value="Your value which is also used as content if no content is set." />
            </Fluent:StatusBar>
        </Grid>

    </Grid>
</Fluent:RibbonWindow>
