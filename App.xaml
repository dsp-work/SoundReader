<Application x:Class="SoundReader.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SoundReader"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--color definitions-->
        <ResourceDictionary>
            <Color x:Key="light_green">#ccff66</Color>
            <Color x:Key="scarlet">#d3381c</Color>
            <Color x:Key="wisteria">#a15dc4</Color>
            <Color x:Key="lilac">#ff7058a3</Color>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Fluent;Component/Themes/Generic.xaml" />
                <ResourceDictionary Source="TabControlMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
